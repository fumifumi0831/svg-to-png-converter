{
  "name": "svg-to-png-converter",
  "displayName": "SVG to PNG Converter",
  "description": "Convert SVG files to PNG and save them to a specified location",
  "version": "0.1.1",
  "publisher": "fumifumi0831",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/fumifumi0831/svg-to-png-converter.git"
  },
  "keywords": [
    "svg",
    "png",
    "converter",
    "image",
    "graphics",
    "vector",
    "raster",
    "conversion",
    "batch",
    "transform"
  ],
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "activationEvents": [
    "onCommand:svg-to-png-converter.convertToPng"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "svg-to-png-converter.convertToPng",
        "title": "Convert SVG to PNG"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .svg",
          "command": "svg-to-png-converter.convertToPng",
          "group": "navigation"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "svg-to-png-converter.convertToPng",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceExtname == .svg",
          "command": "svg-to-png-converter.convertToPng",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "SVG to PNG Converter",
      "properties": {
        "svgToPngConverter.quality": {
          "type": "number",
          "default": 1,
          "description": "Quality of the PNG output (0.1 to 1.0)"
        },
        "svgToPngConverter.defaultOutputPath": {
          "type": "string",
          "default": "",
          "description": "Default output path for converted PNG files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^14.17.0",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "sharp": "^0.32.1"
  }
}
